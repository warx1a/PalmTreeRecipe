@model Recipe

<div class="body-content">
    @{
        Html.RenderPartial("ErrorMessagePartial", Model.errorMessages);
    }
    @using(Html.BeginForm("CreateRecipe", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Ingredients)
        @Html.HiddenFor(m => m.Steps)
        <table>
            <tr>
                <td>
                    @Html.LabelFor(m => m.RecipeName, "Recipe Name:")
                </td>
                <td>
                    @Html.TextBoxFor(m => m.RecipeName)
                </td>
            </tr>
            <tr>
                <td>
                    <label for="btnAddIngredient">Ingredients:</label>
                </td>
                <td>
                    <button type="button" id="btnAddIngredient">Add Ingredient</button>
                </td>
            </tr>
            <tr>
                <td></td>
            </tr>
            <tr>
                <td>
                    <label for="btnAddStep">Steps:</label>
                </td>
                <td>
                    <button type="button" id="btnAddStep">Add Step</button>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><button type="submit" id="btnCreateRecipe">Create Recipe</button></td>
            </tr>
        </table>
        <div class="ingredientHolder">
            <p>Current Ingredients:</p>
            <table id="tblCurrentIngredients">
                <tbody>
                </tbody>
            </table>
        </div>
        <div class="stepHolder">
            <p>Current Steps:</p>
            <table id="tblCurrentSteps">
                <tbody>

                </tbody>
            </table>
        </div>
        <div id="ingredientDialog">
            <table>
                <tr>
                    <td>
                        <label for="txtIngredientName">Ingredient Name:</label>
                    </td>
                    <td>
                        <input type="text" id="txtIngredientName"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="txtQuantity">Quantity:</label>
                    </td>
                    <td>
                        <input type="text" id="txtQuantity"/>
                    </td>
                </tr>
            </table>
        </div>
        <div id="stepDialog">
            <table>
                <tr>
                    <td>
                        <label for="txtStepValue">Step:</label>
                    </td>
                    <td>
                        <input type="text" id="txtStepValue"/>
                    </td>
                </tr>
            </table>
        </div>
    }
</div>

<script type="text/javascript" src="~/js/CreateRecipe.js"></script>

